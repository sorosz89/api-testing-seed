{
  "compilerOptions": {
    "target": "es2018",                                  
    "module": "commonjs",                              
    "rootDir": "./",                                 
    "baseUrl": "./",                                
    "paths": {
      "@utils/*": [ "utils/*"]
    },                                     
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                  
    "skipLibCheck": true                                 
  }
}